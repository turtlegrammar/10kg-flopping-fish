#!/bin/bash

sudo apt-get update
sudo apt-get install -y fish
sudo chsh -s /usr/bin/fish $USER

mkdir fish-config
wget https://raw.githubusercontent.com/weavejester/fish-git/master/completions/git.fish > fish-config/git.fish
fish fish-config/git.fish

wget https://github.com/weavejester/fish-git/blob/master/functions/prompt_git.fish > fish-config/prompt_git.fish
fish fish-config/prompt_git.fish

echo "set PATH /var/tmp/coder/coder-cli $PATH" >> ~/.config/fish/config.fish